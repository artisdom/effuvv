#!/usr/bin/env node
global.USAGE = `
USAGE: farch-init

Creates the /farch directory with a basic example configuration. This will need
to be modified.
`;

(async () => {
  const argv        = require("minimist")(process.argv.slice(2));
  const configDir   = require("../lib/singletons/config_dir.js");
  const copy        = require("../lib/util/copy.js");
  const mkdirp      = require("fs.extra").mkdirp;
  const passthru    = require("../lib/util/passthru.js");

  if (argv.help) {
    console.log(global.USAGE);
    process.exit(0);
  }

  await mkdirp(configDir);

  const source = require.resolve("../share/skel/farch_conf.js")
  const target = `${ configDir }/farch_conf.js`;
  await copy(source, target);
  console.log(`${ source } -> ${ target }`);

  await passthru("farch-edit -o -n /etc/pacman.conf");
  await passthru("farch-edit -o -n /etc/pacman.d/mirrorlist");
})();
